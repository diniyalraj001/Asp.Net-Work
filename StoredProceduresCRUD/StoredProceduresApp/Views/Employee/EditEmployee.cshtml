@using StoredProceduresApp.Models
@model StoredProceduresApp.Models.AllModel

<h1>Hello</h1>

@{
    if (Model.employees != null && Model.employees.Count > 0)
    {
        foreach (var item in Model.employees)
        {
            

            <div class="container p-5 ms-4 me-4">
                <form method="post" asp-controller="Employee" asp-action="EditEmployee">
                <input value="@item.EmployeeID" name="EmployeeID" hidden >
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" value="@item.Name" name="Name" class="form-control" id="name">
                        
                    </div>
                    <div class="mb-3">
                        <label for="Postion" class="form-label">Position</label>
                        <input type="text" name="Position" value="@item.Position" class="form-control" id="Position">
                    </div>

                    <div class="form-group mb-4" style="width:80px">
                        <label for="Gender">Gender</label>
                        <select class="form-control" name="Gender" id="Gender">
                            <option selected >@item.Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Salary" class="form-label">Salary</label>
                        <input type="text" name="Salary" value="@item.Salary" class="form-control" id="Salary">
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:150px">Save Changes</button>
                    <a asp-controller="Employee" asp-action="EmployeeList" class="btn btn-secondry ">Go Back</a>

                </form>

            </div>

        }
    }
}